generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         String   @id @default(cuid())
  email                      String   @unique
  name                       String?
  username                   String?  @unique
  bio                        String?
  profilePictureUrl          String?
  instagram                  String?
  twitter                    String?
  youtube                    String?
  tiktok                     String?
  linkedin                   String?
  website                    String?
  defaultDietaryRestrictions String[]
  defaultLikedToppings       String[]
  defaultDislikedToppings    String[]
  defaultLikedBeverages      String[]
  defaultDislikedBeverages   String[]
  defaultAddress             String?
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt

  parties    Party[]
  orders     Order[]
  magicLinks MagicLink[]
}

model Party {
  id                 String    @id @default(cuid())
  name               String
  inviteCode         String    @unique @default(cuid()) @map("invite_code")
  customUrl          String?   @unique @map("custom_url")
  hostName           String?   @map("host_name")
  date               DateTime?
  duration           Float?
  timezone           String?
  pizzaSize          String    @map("pizza_size")
  pizzaStyle         String    @map("pizza_style")
  availableBeverages String[]  @map("available_beverages")
  availableToppings  String[]  @map("available_toppings")
  address            String?
  latitude           Float?
  longitude          Float?
  maxGuests          Int?      @map("max_guests")
  hideGuests         Boolean   @default(false) @map("hide_guests")
  coHosts            Json      @default("[]") @map("co_hosts")
  password           String?
  eventImageUrl      String?   @map("event_image_url")
  description        String?
  rsvpClosedAt       DateTime? @map("rsvp_closed_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  guests Guest[]
  orders Order[]

  @@map("parties")
}

model Guest {
  id                  String   @id @default(cuid())
  name                String
  email               String?
  ethereumAddress     String?  @map("ethereum_address")
  roles               String[]
  mailingListOptIn    Boolean  @default(false) @map("mailing_list_opt_in")
  dietaryRestrictions String[] @map("dietary_restrictions")
  likedToppings       String[] @map("liked_toppings")
  dislikedToppings    String[] @map("disliked_toppings")
  likedBeverages      String[] @map("liked_beverages")
  dislikedBeverages   String[] @map("disliked_beverages")
  pizzeriaRankings    String[] @map("pizzeria_rankings")
  submittedAt         DateTime @default(now()) @map("submitted_at")
  submittedVia        String   @default("link") @map("submitted_via")

  partyId String @map("party_id")
  party   Party  @relation(fields: [partyId], references: [id], onDelete: Cascade)

  pizzaMappings GuestPizzaMapping[]

  @@map("guests")
}

model Order {
  id              String   @id @default(cuid())
  provider        String
  externalOrderId String?
  pizzas          Json
  totalAmount     Decimal  @db.Decimal(10, 2)
  status          String   @default("pending")
  pizzeriaName    String
  pizzeriaAddress String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // ML training metadata
  totalPizzas       Int?
  avgGuestsPerPizza Float?

  partyId String
  party   Party  @relation(fields: [partyId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  orderItems    OrderItem[]
  guestMappings GuestPizzaMapping[]
}

// Individual pizza items in an order (for ML training)
model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  pizzaIndex    Int       // Position in the order (1st pizza, 2nd pizza, etc.)
  size          String
  toppings      String[]
  isHalfAndHalf Boolean   @default(false)
  leftToppings  String[]
  rightToppings String[]
  priceEstimate Decimal?  @db.Decimal(10, 2)

  guestMappings GuestPizzaMapping[]
  createdAt     DateTime @default(now())
}

// Maps guests to their assigned pizzas (for ML training)
model GuestPizzaMapping {
  id String @id @default(cuid())

  guestId String
  guest   Guest  @relation(fields: [guestId], references: [id], onDelete: Cascade)

  orderItemId String
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  orderId String
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  whichHalf          String? // 'left', 'right', or null for whole pizza
  satisfactionRating Int?    // 1-5 rating (optional feedback)

  createdAt DateTime @default(now())

  @@unique([guestId, orderItemId])
}

model MagicLink {
  id        String    @id @default(cuid())
  token     String    @unique
  code      String    @unique
  email     String
  expiresAt DateTime
  used      Boolean   @default(false)
  attempts  Int       @default(0)
  lockedAt  DateTime?
  createdAt DateTime  @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
