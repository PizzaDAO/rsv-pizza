generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         String   @id @default(cuid())
  email                      String   @unique
  name                       String?
  defaultDietaryRestrictions String[]
  defaultLikedToppings       String[]
  defaultDislikedToppings    String[]
  defaultAddress             String?
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt

  parties    Party[]
  orders     Order[]
  magicLinks MagicLink[]
}

model Party {
  id           String    @id @default(cuid())
  name         String
  inviteCode   String    @unique @default(cuid())
  date         DateTime?
  pizzaSize    String
  pizzaStyle   String
  address      String?
  latitude     Float?
  longitude    Float?
  maxGuests    Int?
  rsvpClosedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  guests Guest[]
  orders Order[]
}

model Guest {
  id                  String   @id @default(cuid())
  name                String
  dietaryRestrictions String[]
  likedToppings       String[]
  dislikedToppings    String[]
  submittedAt         DateTime @default(now())
  submittedVia        String   @default("link")

  partyId String
  party   Party  @relation(fields: [partyId], references: [id], onDelete: Cascade)

  pizzaMappings GuestPizzaMapping[]
}

model Order {
  id              String   @id @default(cuid())
  provider        String
  externalOrderId String?
  pizzas          Json
  totalAmount     Decimal  @db.Decimal(10, 2)
  status          String   @default("pending")
  pizzeriaName    String
  pizzeriaAddress String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // ML training metadata
  totalPizzas       Int?
  avgGuestsPerPizza Float?

  partyId String
  party   Party  @relation(fields: [partyId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  orderItems    OrderItem[]
  guestMappings GuestPizzaMapping[]
}

// Individual pizza items in an order (for ML training)
model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  pizzaIndex    Int       // Position in the order (1st pizza, 2nd pizza, etc.)
  size          String
  toppings      String[]
  isHalfAndHalf Boolean   @default(false)
  leftToppings  String[]
  rightToppings String[]
  priceEstimate Decimal?  @db.Decimal(10, 2)

  guestMappings GuestPizzaMapping[]
  createdAt     DateTime @default(now())
}

// Maps guests to their assigned pizzas (for ML training)
model GuestPizzaMapping {
  id String @id @default(cuid())

  guestId String
  guest   Guest  @relation(fields: [guestId], references: [id], onDelete: Cascade)

  orderItemId String
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  orderId String
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  whichHalf          String? // 'left', 'right', or null for whole pizza
  satisfactionRating Int?    // 1-5 rating (optional feedback)

  createdAt DateTime @default(now())

  @@unique([guestId, orderItemId])
}

model MagicLink {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
